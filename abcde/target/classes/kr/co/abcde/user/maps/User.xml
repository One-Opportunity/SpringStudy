<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
	<insert id="insertData" parameterType="kr.co.abcde.user.dto.UserDTO">
		INSERT INTO TB_USER (
		USER_ID
		,LOGIN_ID
		,LOGIN_PW
		,NAME
		,PHONE
		,EMAIL
		) VALUES (
		#{userId}
		,#{loginId}
		,#{loginPw}
		,#{name}
		,#{phone}
		,#{email}
		)
	</insert>
	<select id="selectOne" parameterType="int"
		resultType="kr.co.abcde.user.dto.UserDTO">
		SELECT *
		FROM TB_USER
		WHERE USER_ID=#{userId}
	</select>

	<select id="selectOneByLoginId" parameterType="String"
		resultType="kr.co.abcde.user.dto.UserDTO">
		SELECT *
		FROM TB_USER
		WHERE LOGIN_ID=#{loginId}
	</select>
</mapper>