<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">

 <global-method-security secured-annotations="enabled" pre-post-annotations="enabled">
  <expression-handler ref="methodSecurityExpressionHandler"/>
 </global-method-security>

 <http pattern="/css/**" security="none"/>
 <http pattern="/js/**" security="none"/>
 <http pattern="/img/**" security="none"/>
 
 <http auto-config="true" use-expressions="true" >
  <intercept-url pattern="/gugudan/*" access="permitAll "/>
  <intercept-url pattern="/captcha/*" access="permitAll "/>
  <intercept-url pattern="/index" access="permitAll "/>
  <intercept-url pattern="/main/login" access="permitAll "/>
  <intercept-url pattern="/join/join" access="permitAll "/>
  
  <intercept-url pattern="/security/login" access="permitAll "/>
  <intercept-url pattern="/common/exchangeLang.json" access="permitAll "/>
  <intercept-url pattern="/**" access="hasRole('ROLE_USER')"/>
  <form-login login-page="/main/login" 
   default-target-url="/main/index"
   login-processing-url="/security/login" 
   always-use-default-target="true" 
   authentication-failure-url="/main/login?error=1"
   username-parameter="lgnId" 
   password-parameter="lgnPw"
   authentication-success-handler-ref="authenicationSuccess"/>
  <remember-me />
  <session-management>
   <concurrency-control max-sessions="1" error-if-maximum-exceeded="false"/>
  </session-management>
  <logout logout-success-url="/main/login" logout-url="/logout"/>
 </http>
 
 <beans:bean id="authenicationSuccess" class="kr.co.itshan.common.security.AuthenticationSuccess"/>
 <beans:bean id="userDetailService" class="kr.co.itshan.common.security.UserDetailService"/>

 <authentication-manager alias="authenticationManager">
  <authentication-provider user-service-ref="userDetailService">
   <password-encoder hash="plaintext" base64="true"/>
  </authentication-provider>
 </authentication-manager>

</beans:beans>
