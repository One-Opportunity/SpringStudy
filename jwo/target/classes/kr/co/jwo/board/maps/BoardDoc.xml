<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardDoc">
	<insert id="insertData" parameterType="kr.co.jwo.board.dto.BoardDocDTO">
		<selectKey keyProperty="docId" resultType="int" order="BEFORE">
			SELECT SEQ_DOC.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO TB_BOARD_DOC(
		DOC_ID
		,USER_ID
		,MAP_ID
		,TITLE
		,BOARD_CONTENTS
		)
		VALUES
		(
		#{docId}
		,#{userId}
		,#{mapId}
		,#{title}
		,#{boardContents}
		)
	</insert>

	<update id="updateData" parameterType="kr.co.jwo.board.dto.BoardDocDTO">
		UPDATE TB_BOARD_DOC
		SET
		TITLE = #{title}
		,BOARD_CONTENTS = #{boardContents}
		WHERE
		DOC_ID = #{docId}
	</update>

	<delete id="deleteData" parameterType="int">
		DELETE FROM TB_BOARD_DOC
		WHERE DOC_ID = #{docId}
	</delete>

	<select id="selectOneData" parameterType="int"
		resultType="kr.co.jwo.board.dto.BoardDocDTO">
		SELECT * FROM TB_BOARD_DOC
		WHERE DOC_ID = #{docId}
	</select>
	
	<select id="selectListByMapId" parameterType="Integer"
		resultType="kr.co.jwo.board.dto.BoardDocDTO">
		SELECT * 
		FROM TB_BOARD_DOC
		WHERE MAP_ID = #{mapId}
	</select>

</mapper>